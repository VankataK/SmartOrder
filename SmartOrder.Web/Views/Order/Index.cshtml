@using SmartOrder.Web.ViewModels.Order
@model IEnumerable<OrderListViewModel>

<h2 class="mb-4">Orders</h2>
@if (!Model.Any())
{
    <p>No orders available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Table Number</th>
                <th>Status</th>
                <th>Assigned Waiter</th>
                <th>Total Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.TableNumber</td>
                    <td>@order.Status</td>
                    <td>@order.AssignedWaiter</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}