<div class="container mt-4">
    <h2 class="text-center">Admin Dashboard</h2>
    <div class="row">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">User Management</h5>
                    <p class="card-text">Manage users, assign roles, and delete accounts.</p>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Users" class="btn btn-primary">Manage Users</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Order Management</h5>
                    <p class="card-text">View and manage all restaurant orders.</p>
                    <a asp-area="Admin" asp-controller="Home" asp-action="Orders" class="btn btn-primary">Manage Orders</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">Venue Management</h5>
                    <p class="card-text">View and manage all restaurants.</p>
                    <a asp-area="Admin" asp-controller="Venue" asp-action="Index" class="btn btn-primary">Manage Venues</a>
                </div>
            </div>
        </div>
    </div>
</div>
