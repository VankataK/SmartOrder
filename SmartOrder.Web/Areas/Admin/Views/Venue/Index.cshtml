@using SmartOrder.Web.ViewModels.Venue
@model IEnumerable<VenueViewModel>
@using SmartOrder.Common;

<h2 class="mb-4">Управление на заведения</h2>
@if (!Model.Any())
{
    <div class="alert alert-info">Няма налични заведения.</div>
}
else
{
    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Име</th>
                <th>Тип</th>
                <th>Град</th>
                <th>Създадено на</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var venue in Model)
            {
                <tr>
                    <td>@venue.Name</td>
                    <td>@venue.Type</td>
                    <td>@venue.City</td>
                    <td>@venue.CreatedOn.ToString("yyyy-MM-dd")</td>
                    <td>
                        <form asp-action="Delete" method="post" onsubmit="return confirm('Сигурни ли сте, че искате да изтриете това заведение?');">
                            <input type="hidden" name="id" value="@venue.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Изтриване</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
