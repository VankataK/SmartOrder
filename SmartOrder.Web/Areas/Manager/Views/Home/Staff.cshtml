@using SmartOrder.Web.ViewModels.User
@model IEnumerable<UserViewModel>

<h2 class="mb-4">Управление на персонала</h2>
@if (!Model.Any())
{
    <p>Няма налични членове на персонала.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Пълно име</th>
                <th>Имейл</th>
                <th>Роля</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var staff in Model)
            {
                <tr>
                    <td>@staff.FullName</td>
                    <td>@staff.Email</td>
                    <td>@staff.Role</td>
                    <td>
                        <form asp-action="AssignRole" method="post">
                            <input type="hidden" name="userId" value="@staff.Id" />
                            <select name="role" class="form-select">
                                <option value="Waiter">Сервитьор</option>
                                <option value="Manager">Мениджър</option>
                            </select>
                            <button type="submit" class="btn btn-primary btn-sm mt-2">Задай роля</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<div class="mt-3">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
        Обратно към таблото
    </a>
</div>