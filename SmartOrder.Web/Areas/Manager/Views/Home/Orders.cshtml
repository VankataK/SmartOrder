@using SmartOrder.Web.ViewModels.Order
@model IEnumerable<OrderDetailsViewModel>

<h2 class="mb-4">Преглед на поръчките</h2>
@if (!Model.Any())
{
    <p>Няма налични поръчки.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Номер на масата</th>
                <th>Статус</th>
                <th></th>
                <th>Обща цена</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.TableNumber</td>
                    <td>@order.Status</td>
                    <td>
                        <ul class="list-group">
                            @foreach (var item in order.Items)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@item.ItemName - @item.Quantity × @item.Price лв.</span>
                                </li>
                            }
                        </ul>
                    </td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    
                </tr>
            }
        </tbody>
    </table>
}
<div class="mt-3">
    <a asp-action="Index" asp-controller="Home" class="btn btn-secondary">
        Обратно към таблото
    </a>
</div>