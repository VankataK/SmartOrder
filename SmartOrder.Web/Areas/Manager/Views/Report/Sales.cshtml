@using SmartOrder.Web.ViewModels.Report
@model IEnumerable<SalesReportViewModel>

<h2 class="mb-4">Отчет за продажбите</h2>
@if (!Model.Any())
{
    <p>Няма налични данни за продажбите.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Номер на масата</th>
                <th>Общо поръчки</th>
                <th>Общ приход</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.TableNumber</td>
                    <td>@report.TotalOrders</td>
                    <td>@report.TotalRevenue.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}
