@using SmartOrder.Web.ViewModels.Report
@model IEnumerable<SalesReportViewModel>

<h2 class="mb-4">Sales Report</h2>
@if (!Model.Any())
{
    <p>No sales data available.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Table ID</th>
                <th>Total Orders</th>
                <th>Total Revenue</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.TableId</td>
                    <td>@report.TotalOrders</td>
                    <td>@report.TotalRevenue.ToString("C")</td>
                </tr>
            }
        </tbody>
    </table>
}